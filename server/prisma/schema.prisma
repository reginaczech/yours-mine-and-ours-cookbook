generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  firstName String
  lastName  String
  password  String
  recipes   Recipe[]
  friends   Int[]     @default([])
}

model Recipe {
  id           Int          @id @default(autoincrement())
  authorId     Int
  author       User      @relation(fields: [authorId], references: [id])
  recipeName   String
  image        String?
  durationAmt  Int
  durationUnit String
  servingSize  Int?
  measureUnit  String?
  instructions String[]
  comments     String[]
  rating       Int?
  favorite     Boolean      @default(false)
  ingredients  Ingredient[]
  categories   Category[]   @relation("CategoryToRecipe")
}

model Category {
  id           Int      @id @default(autoincrement())
  categoryName String   @unique
  recipes      Recipe[] @relation("CategoryToRecipe")
}

model Ingredient {
  id        Int          @id @default(autoincrement())
  ingAmount String
  ingUnitId Int?         @unique
  ingName   String
  recipeId  Int
  ingUnit   Measurement? @relation(fields: [ingUnitId], references: [id])
  recipe    Recipe       @relation(fields: [recipeId], references: [id])
}

model Measurement {
  id          Int         @id @default(autoincrement())
  units       String
  ingredients Ingredient?
}
